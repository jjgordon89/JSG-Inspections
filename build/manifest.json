{
  "name": "JSG Inspections",
  "short_name": "JSG Inspections",
  "description": "Professional inspection management system for equipment, facilities, and compliance tracking",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#2563eb",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["business", "productivity", "utilities"],
  "icons": [
